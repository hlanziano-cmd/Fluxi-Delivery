{
    "version": 2,
    "buildCommand": "echo 'No build needed - static files'",
    "outputDirectory": ".",
    "functions": {
        "api/dyalogo.js": {
            "maxDuration": 30
        },
        "api/sync-recovery.js": {
            "maxDuration": 60
        },
        "api/cleanup-old-data.js": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/sync-recovery?days=7",
            "schedule": "0 6 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/domiciliarios",
            "destination": "/app-domiciliarios.html"
        },
        {
            "source": "/domiciliarios/",
            "destination": "/app-domiciliarios.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
